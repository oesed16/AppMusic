<div class="container">
  <div class="row">
    <div class="col-8">
      <h2><%= @artist.name %></h2>
      <h3> Albums (<%= @albums.count %>)</h3>
      <div class="row m-2">
        <% @albums.each do |album| %>
          <div class="col-4 m-2">
            <div class="card" style="width: 15rem;">
              <img class="card-img-top" src="<%= album.image_url %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title text-left" style="font-size: 15px;"><%= album.name %></h5>
                <h5 class="card-title text-left" style="font-size: 15px;"><%= album.released_at.year %></h5>
              </div>
            </div>
          </div>
        <% end %>  
      </div>  
    </div>
    <div class="col-2 m-3">
      <img class="card" style="width: 20rem;" src="<%= @artist.image_url %>">
    </div>  
  </div>
