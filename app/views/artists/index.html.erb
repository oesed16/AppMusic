<div class="container">
  <div class="row justify-content-center">
    <% @artists.each do |artist| %>
      <div class="col-3 m-4 p-3">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= artist.image_url %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title text-center"><%= artist.name %></h5>
            <%= link_to "Ver más", artist_path(artist), class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>
      </div>
    <% end %>  
  </div>  
</div>